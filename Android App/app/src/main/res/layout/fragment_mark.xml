<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="vn.piti.draku.piti.TeacherMarkActivity"
    tools:showIn="@layout/activity_mark_teacher"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/boc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shadow"
        android:layout_margin="10dp"
        android:padding="5dp">

        <pl.coreorb.selectiondialogs.views.SelectedItemView
            android:id="@+id/class_siv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="@string/class_hint"
            app:itemIcon="@drawable/ic_class"
            app:itemName="Lớp" />

        <pl.coreorb.selectiondialogs.views.SelectedItemView
            android:id="@+id/student_siv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="@string/student_hint"
            app:itemIcon="@drawable/ic_student_black"
            app:itemName="@string/student_hint" />

        <pl.coreorb.selectiondialogs.views.SelectedItemView
            android:id="@+id/mark_siv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="Điểm"
            app:itemIcon="@drawable/icon_text"
            app:itemName="Điểm" />

        <pl.coreorb.selectiondialogs.views.SelectedItemView
            android:id="@+id/type_siv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="Hệ số"
            app:itemIcon="@drawable/ic_student_black"
            app:itemName="Hệ số điểm" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp">
            <android.support.v7.widget.AppCompatButton
                android:layout_below="@+id/blockDate"
                android:id="@+id/btnSend"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Gửi"
                android:textColor="@color/white"
                android:background="@drawable/btn_mark"
                android:textStyle="bold"/>
        </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>
</ScrollView>