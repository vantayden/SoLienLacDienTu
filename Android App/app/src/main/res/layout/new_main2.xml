<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="6"
    android:background="@color/material_grey_200">
    <RelativeLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main2" >
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Sổ liên lạc điện tử"/>

        <ImageView
            android:id="@+id/changeTheme"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/reload"
            android:padding="10dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <TextView
        android:id="@id/student_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/material_grey_700"
        android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleColor="@android:color/black">
                <RelativeLayout
                    android:id="@+id/main_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <ImageView
                        android:id="@+id/notification"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:src="@drawable/notification"/>
                    <TextView
                        android:id="@+id/main_menu1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/parent_main_notification"
                        android:layout_toRightOf="@+id/notification"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/material_grey_700"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"/>
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        android:padding="20dp"
                        android:src="@drawable/ra_menu"
                        />
                </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
            <include layout="@layout/item_divider" />
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleColor="@android:color/black">
                <RelativeLayout
                    android:id="@+id/main_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <ImageView
                        android:id="@+id/student_image"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:src="@drawable/student"/>
                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/parent_main_student"
                        android:layout_toRightOf="@+id/student_image"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/material_grey_700"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"/>
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        android:padding="20dp"
                        android:src="@drawable/ra_menu"
                        />
                </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
            <include layout="@layout/item_divider" />
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleColor="@android:color/black">
                <RelativeLayout
                    android:id="@+id/main_mark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <ImageView
                        android:id="@+id/mark"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:src="@drawable/mark"/>
                    <TextView
                        android:id="@+id/main_menu2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/parent_main_mark"
                        android:layout_toRightOf="@+id/mark"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/material_grey_700"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"/>
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        android:padding="20dp"
                        android:src="@drawable/ra_menu"
                        />
                </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
            <include layout="@layout/item_divider" />
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleColor="@android:color/black">
                <RelativeLayout
                    android:id="@+id/main_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <ImageView
                        android:id="@+id/schedule"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:src="@drawable/schedule"/>
                    <TextView
                        android:id="@+id/main_menu3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/parent_main_schedule"
                        android:layout_toRightOf="@+id/schedule"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/material_grey_700"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"/>
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        android:padding="20dp"
                        android:src="@drawable/ra_menu"
                        />
                </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
            <include layout="@layout/item_divider" />
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleColor="@android:color/black">
                <RelativeLayout
                    android:id="@+id/main_ask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <ImageView
                        android:id="@+id/ask"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:src="@drawable/ask"/>
                    <TextView
                        android:id="@+id/main_menu4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/parent_main_ask"
                        android:layout_toRightOf="@+id/ask"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/material_grey_700"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"/>
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        android:padding="20dp"
                        android:src="@drawable/ra_menu"
                        />
                </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/material_grey_700"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Version 1.2 - © UET 2016"/>
</LinearLayout>