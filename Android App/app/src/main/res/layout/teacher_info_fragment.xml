<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/material_grey_100">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/material_grey_100">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/backButton"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleColor="@color/material_grey_500"
                app:mrl_rippleRoundedCorners="200dp">
                    <ImageView
                        android:id="@+id/dismiss"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="right"
                        android:src="@drawable/cancel"
                        android:layout_margin="5dp"
                        android:visibility="invisible"/>
            </com.balysv.materialripple.MaterialRippleLayout>
        </RelativeLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/teacher_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="16dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/teacher"/>
        <TextView
            android:id="@+id/teacher_name"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Teacher name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/material_grey_700"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow"
                android:orientation="vertical"
                android:layout_marginTop="16dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp">

                    <ImageView
                        android:id="@+id/ivContactItem1"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_margin="2dp"
                        android:padding="16dp"
                        android:src="@drawable/info_school" />

                    <TextView
                        android:id="@+id/teacher_type"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ivContactItem1"
                        android:text="type - school"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/material_grey_700"
                        android:layout_marginRight="8dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/material_grey_200"
                    android:layout_marginLeft="72dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp">

                    <ImageView
                        android:id="@+id/ivContactItem2"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_margin="2dp"
                        android:padding="16dp"
                        android:src="@drawable/info_subject" />

                    <TextView
                        android:id="@+id/teacher_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ivContactItem2"
                        android:text="subject"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:layout_marginLeft="8dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/material_grey_700"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/material_grey_200"
                    android:layout_marginLeft="72dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp">

                    <ImageView
                        android:id="@+id/ivContactItem3"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_margin="2dp"
                        android:padding="16dp"
                        android:src="@drawable/info_address" />

                    <TextView
                        android:id="@+id/teacher_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ivContactItem3"
                        android:text="address"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/material_grey_700"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/material_grey_200"
                    android:layout_marginLeft="72dp"/>
                <RelativeLayout
                    android:id="@+id/teacher_call"
                    android:layout_width="match_parent"
                    android:layout_height="72dp">

                    <ImageView
                        android:id="@+id/ivContactItem4"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_margin="2dp"
                        android:padding="16dp"
                        android:src="@drawable/info_phone" />

                    <TextView
                        android:id="@+id/teacher_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ivContactItem4"
                        android:text="teacher phone"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:layout_marginLeft="8dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/material_grey_700"/>

                </RelativeLayout>
            </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>