<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_200">
    <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/ms9_DefaultShadowStyle"
        android:id="@+id/shadow_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ms9_shadowTranslationZ="2dp"
        app:ms9_shadowElevation="4dp">
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/main_student"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@color/main2"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleColor="@android:color/black">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/student_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="10dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/student"/>
            <TextView
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/student_image"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/student_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/student_image"
                android:layout_below="@+id/student_name"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="17sp"/>
            <ImageView
                android:id="@+id/changeTheme"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/reload"
                android:padding="10dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        </com.balysv.materialripple.MaterialRippleLayout>
    </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2">
                <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    style="@style/ms9_DefaultShadowStyle"
                    android:id="@+id/shadow_menu1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ms9_shadowTranslationZ="2dp"
                    app:ms9_shadowElevation="4dp"
                    android:layout_weight="1">
            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/main_notification"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/shadow"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleColor="@android:color/black">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/icon1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/notification"/>
                    <RelativeLayout
                        android:layout_below="@+id/icon1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/material_yellow_400"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/main_menu1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:layout_alignParentLeft="true"
                            android:text="@string/parent_main_notification"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="10dp"
                            android:src="@drawable/ra"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
        </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>

                <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    style="@style/ms9_DefaultShadowStyle"
                    android:id="@+id/shadow_menu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ms9_shadowTranslationZ="2dp"
                    app:ms9_shadowElevation="4dp"
                    android:layout_weight="1">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/main_mark"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/shadow"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleColor="@android:color/black">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/icon2"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_margin="10dp"
                            android:padding="20dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/mark"/>
                        <RelativeLayout
                            android:layout_below="@+id/icon2"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/material_red_400"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/main_menu2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:layout_alignParentLeft="true"
                                android:text="@string/parent_main_mark"
                                android:textColor="@color/white"
                                android:textStyle="bold"/>
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="10dp"
                                android:src="@drawable/ra"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>

                    </RelativeLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2">
                <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    style="@style/ms9_DefaultShadowStyle"
                    android:id="@+id/shadow_menu3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ms9_shadowTranslationZ="2dp"
                    app:ms9_shadowElevation="4dp"
                    android:layout_weight="1">
                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/main_schedule"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/shadow"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleColor="@android:color/black">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/icon3"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_margin="10dp"
                            android:padding="10dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/schedule"/>
                        <RelativeLayout
                            android:layout_below="@+id/icon3"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/material_green_400"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/main_menu3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:layout_alignParentLeft="true"
                                android:text="@string/parent_main_schedule"
                                android:textColor="@color/white"
                                android:textStyle="bold"/>
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="10dp"
                                android:src="@drawable/ra"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>

                    </RelativeLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>

                <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    style="@style/ms9_DefaultShadowStyle"
                    android:id="@+id/shadow_menu4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ms9_shadowTranslationZ="2dp"
                    app:ms9_shadowElevation="4dp"
                    android:layout_weight="1">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/main_ask"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/shadow"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleColor="@android:color/black">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/icon4"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_margin="10dp"
                            android:padding="10dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ask"/>
                        <RelativeLayout
                            android:layout_below="@+id/icon4"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/material_brown_400"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/main_menu4"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:layout_alignParentLeft="true"
                                android:text="@string/parent_main_ask"
                                android:textColor="@color/white"
                                android:textStyle="bold"/>
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="10dp"
                                android:src="@drawable/ra"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>

                    </RelativeLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/material_grey_700"
                android:layout_marginTop="10dp"
                android:foregroundGravity="bottom"
                android:gravity="center"
                android:text="Version 1.2 - Â© UET 2016"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>