<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Default application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:typeface">serif</item>
        <item name="android:windowAnimationStyle">@null</item>
	    <item name="colorPrimary">@color/main2</item>
	    <item name="colorPrimaryDark">@color/main2</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="colorAccent">@color/main2</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="AppTheme">
        <item name="android:typeface">serif</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:typeface">serif</item>
        <item name="windowActionBar">false</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="AppTheme.Title" parent="Theme.AppCompat">
        <item name="android:typeface">serif</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <!-- Default application theme ends here -->
    <style parent="TextAppearance.AppCompat" name="TextLabel">
        <item name="android:typeface">serif</item>

    <!-- Hint color and label color in FALSE state -->

        <item name="android:textColorHint">@color/white</item>

        <item name="android:textSize">20sp</item>

    <!-- Label color in TRUE state and bar color FALSE and TRUE State -->

        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:radius">200dip</item>

    </style>

    <style parent="TextAppearance.AppCompat" name="TextLabelAsk">
        <item name="android:typeface">serif</item>

        <!-- Hint color and label color in FALSE state -->

        <item name="android:textColorHint">@color/main5</item>

        <item name="android:textSize">20sp</item>

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->

        <item name="colorAccent">@color/main5</item>
        <item name="colorControlNormal">@color/main5</item>
        <item name="colorControlActivated">@color/main5</item>
        <item name="android:textColorLink">@color/main5</item>
        <item name="android:textColorHighlight">@color/main5</item>
        <item name="android:radius">200dip</item>

    </style>
    <style name="AppCompatTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:typeface">serif</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorAccent">@color/main5</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>