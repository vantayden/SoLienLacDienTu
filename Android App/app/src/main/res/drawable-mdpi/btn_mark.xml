<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="200dip" />
            <stroke android:width="0dip" android:color="#5e7974" />
            <gradient android:angle="-90" android:startColor="@color/main3" android:endColor="@color/material_indigo_50"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="200dip" />
            <stroke android:width="0dip" android:color="#5e7974" />
            <solid android:color="@color/material_indigo_400"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="200dip" />
            <stroke android:width="0dip" android:color="#5e7974" />
            <gradient android:angle="0" android:startColor="@color/material_indigo_200" android:endColor="@color/main3" />
        </shape>
    </item>
</selector>